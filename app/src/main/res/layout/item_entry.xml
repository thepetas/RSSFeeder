<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_vertical_small"
    android:paddingBottom="@dimen/margin_vertical_small"
    android:paddingLeft="@dimen/margin_horizontal"
    android:paddingRight="@dimen/margin_horizontal">

    <TextView
        android:id="@+id/item_entry_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical_small"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:text="@string/sample_title"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/item_entry_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary"
        android:text="@string/sample_summary"/>
</LinearLayout>
